[Unit]
Description=LobsterGuard Quarantine Watcher
After=network.target

[Service]
Type=simple
ExecStart=/usr/bin/python3 -u -W ignore %h/.openclaw/skills/lobsterguard/scripts/quarantine_watcher.py
WorkingDirectory=%h/.openclaw/skills/lobsterguard
Environment=HOME=%h
Restart=on-failure
RestartSec=30
MemoryMax=200M

[Install]
WantedBy=default.target
