{
  "name": "lobsterguard",
  "version": "6.1.0",
  "description": "LobsterGuard - Security Auditor & Shield for OpenClaw",
  "author": "LobsterGuard Team",
  "type": "skill+plugin",
  "components": {
    "skill": {
      "path": ".",
      "scripts": [
        "scripts/check.py",
        "scripts/fix_engine.py",
        "scripts/skill_scanner.py",
        "scripts/autoscan.py",
        "scripts/quarantine_watcher.py",
        "scripts/lgsetup.py",
        "scripts/cleanup.py",
        "scripts/telegram_utils.py"
      ]
    },
    "plugin": {
      "path": "extension",
      "entry": "dist/index.js"
    }
  },
  "systemd": {
    "services": [
      "systemd/lobsterguard-autoscan.service",
      "systemd/lobsterguard-autoscan.timer",
      "systemd/lobsterguard-quarantine.service"
    ]
  },
  "telegram_commands": [
    "/scan",
    "/fixlist",
    "/checkskill",
    "/lgsetup",
    "/cleanup",
    "/fixfw",
    "/fixbackup",
    "/fixkernel",
    "/fixcore",
    "/fixaudit",
    "/fixsandbox",
    "/fixsystemd",
    "/fixenv",
    "/fixtmp",
    "/fixcode",
    "/runuser"
  ]
}