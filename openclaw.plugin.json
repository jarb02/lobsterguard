{
  "name": "lobsterguard",
  "version": "4.0.0",
  "description": "LobsterGuard - Security Auditor & Shield for OpenClaw",
  "author": "LobsterGuard Team",
  "type": "skill+plugin",
  "components": {
    "skill": {
      "path": ".",
      "scripts": ["scripts/check.py", "scripts/fix_engine.py", "scripts/skill_scanner.py", "scripts/autoscan.py", "scripts/quarantine_watcher.py", "scripts/lgsetup.py"]
    },
    "plugin": {
      "path": "extension",
      "entry": "dist/index.js"
    }
  },
  "systemd": {
    "services": ["systemd/lobsterguard-autoscan.service", "systemd/lobsterguard-autoscan.timer", "systemd/lobsterguard-quarantine.service"]
  },
  "telegram_commands": [
    "/scan", "/fixlist", "/runall",
    "/fixfw", "/fixbackup", "/fixkernel", "/fixcore", "/fixaudit", "/fixsandbox", "/fixenv", "/fixtmp", "/fixcode",
    "/runuser", "/runcode", "/runtmp", "/runenv", "/runsandbox", "/runaudit", "/runcore", "/runkernel",
    "/checkskill", "/lgsetup"
  ]
}
